<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable name="detailViewModel" type="com.emi.newsfeeding.DetailViewModel"/>
    </data>
    <LinearLayout
            android:id="@+id/detaillayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <ImageView android:id="@+id/placeImage"
                   android:layout_width="match_parent"
                   android:layout_height="220dp"
                   bind:srcCompat="@{detailViewModel.thumbnail}"
                   android:scaleType="centerCrop"
                   android:transitionName="@string/viewTrans"/>

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/title_placeholder"
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:background="@color/colorgrey"
                      android:transitionName="tNameHolder">


            <TextView android:id="@+id/placeTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingEnd="10dp"
                      android:paddingStart="10dp"
                      android:text="@{detailViewModel.title}"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="@android:color/white"/>
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout android:id="@+id/description_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/author_label"
                  android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:text="@string/writer"
                  android:paddingTop="10dp"
                  android:textAlignment="center"
                  android:layout_alignParentLeft="true"
                  android:textStyle="bold"
                  android:layout_marginLeft="5dp"/>

        <TextView android:id="@+id/author"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="10dp"
                  android:textStyle="italic"
                  android:text="@{detailViewModel.author()}"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:layout_margin="0dp"
                  android:layout_toRightOf="@+id/author_label"
                  android:layout_toEndOf="@+id/author_label"
                  tools:text="@string/name"
                  android:textAlignment="center"
                  android:layout_marginStart="10dp"/>


        <TextView android:id="@+id/date_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/date_label"
                  android:layout_toRightOf="@+id/author"
                  android:paddingTop="10dp"
                  android:paddingLeft="10dp"
                  android:layout_marginLeft="10dp"
                  android:textAlignment="center"
                  tools:text="@string/date_label"
                  android:layout_toEndOf="@+id/author"
                  android:textStyle="bold"/>

        <TextView android:id="@+id/date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_toRightOf="@+id/date_label"
                  android:text="@{detailViewModel.published()}"
                  tools:text="@string/date"
                  android:paddingTop="10dp"
        />

    </RelativeLayout>

    <FrameLayout android:id="@+id/article_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_below="@id/description_placeholder">

        <WebView android:id="@+id/webview"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
        </WebView>

    </FrameLayout>
    </LinearLayout>

</layout>